{
	"name": "hugo_webpack_starter",
	"version": "0.1.0",
	"description": "A hugo and webpack starter",
	"main": "index.js",
	"private": true,
	"scripts": {
		"start": "run-p clean start:webpack start:hugo",
		"start:hugo": "hugo server --renderToDisk --disableFastRender -DF",
		"start:webpack": "webpack --watch --mode development",
		"build": "run-s clean build:webpack build:hugo",
		"build:hugo": "hugo --minify",
		"build:webpack": "webpack --mode production",
		"clean": "rm -rf public resources static/assets data/manifest.json"
	},
	"license": "MIT",
	"devDependencies": {
		"@babel/core": "^7.2.2",
		"@babel/preset-env": "^7.3.1",
		"autoprefixer": "^9.4.7",
		"babel-loader": "^8.0.5",
		"css-loader": "^2.1.0",
		"file-loader": "^3.0.1",
		"mini-css-extract-plugin": "^0.5.0",
		"node-sass-chokidar": "^1.3.4",
		"npm-run-all": "^4.1.5",
		"optimize-css-assets-webpack-plugin": "^5.0.1",
		"postcss-loader": "^3.0.0",
		"resolve-url-loader": "^3.0.0",
		"sass-loader": "^7.1.0",
		"uglifyjs-webpack-plugin": "^2.1.1",
		"url-loader": "^1.1.2",
		"webpack": "^4.29.0",
		"webpack-cli": "^3.2.1",
		"webpack-fix-style-only-entries": "^0.1.0",
		"webpack-manifest-plugin": "^2.0.4"
	},
	"babel": {
		"presets": [
			"@babel/preset-env"
		]
	},
	"postcss": {
		"plugins": {
			"autoprefixer": {}
		}
	},
	"browserslist": [
		"> 1%",
		"last 2 versions",
		"not ie <= 8"
	]
}
